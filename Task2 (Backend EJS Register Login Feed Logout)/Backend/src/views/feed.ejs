<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Instagram Feed</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <div class="container mx-auto p-4">
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Instagram Feed</h1>
        <form action="/api/logout" method="get">
          <button
            type="submit"
            class="bg-red-500 text-white font-bold py-2 px-4 rounded hover:bg-red-600"
          >
            Logout
          </button>
        </form>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% data.forEach(post => { %>
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
          <div class="p-4 flex items-center">
            <img
              src="<%= post.profilePic %>"
              alt="Profile Picture"
              class="w-12 h-12 rounded-full mr-4"
            />
            <h2 class="text-lg font-semibold"><%= post.profileName %></h2>
          </div>
          <img
            src="<%= post.feedImage %>"
            alt="Feed Image"
            class="w-full h-64 object-cover"
          />
          <div class="p-4">
            <p class="text-gray-800 mb-2"><%= post.caption %></p>
            <div
              class="flex items-center justify-between text-gray-600 text-sm"
            >
              <span><%= post.likes %> Likes</span>
              <span><%= post.comments %> Comments</span>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
